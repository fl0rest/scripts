#!/bin/bash

echo "What is your name?"
read name
echo "What is your age?"
read age

rich=$((( $RANDOM % 11 )+$age))

echo "Hello $name, $age"

echo "Calculating"
sleep 1
echo "----------"
sleep 1
echo "###-------"
sleep 1
echo "#####-----"
sleep 1
echo "########--"
sleep 1
echo "##########"
sleep 0.5
echo "You will be rich when you are $rich years old" 
